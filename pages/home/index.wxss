/* pages/home/index.wxss */

page{
  width: 100%;
  height:100%;
}

.wraper{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}
.header{
  background: rgb(8, 117, 94);
  color: #fff;
  line-height: 100rpx;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
}

.main{
  flex: 1;
  position: relative;
}

.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.main-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
}

.card{
  width: 47vw;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
}

.card-box{
  width: 100%;
  height: 300rpx;
  border-radius: 6rpx; 
}
.card-ico
{
  width: 100%;
  height: 300rpx;
  border-radius: 40rpx;
}

.card-content{
  display: flex;
  color: blue;
  font-size: 24;
  padding: 10rpx;
  justify-content: center;  
}

.footer{
  background: rgb(203, 203, 206);
  color: #fff;
  line-height: 100rpx;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
}

