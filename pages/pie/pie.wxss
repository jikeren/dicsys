
swiper-item scroll-view {
  height: 100%;
}

scroll-view .canvas {
  width: 100%;
  margin: 0 auto;
  height: 100%;
  margin-top: 45rpx;
  
}

.pie-box
{
  border-left: 2px solid #8a0f38;
  margin-top: 100rpx;
  width:300rpx;
  height: 600rpx;
}

.graph-box{
  width:100%;
  height: 240px;
}


.selectTable-cell
{ display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 10rpx;
}
.weui-check-label
{ display: flex;
  flex-direction: row;
  padding: 10rpx;
}
.weui-input{
  display: flex;
  border: solid 2rpx;
  width: 180rpx;
  justify-content: center;
  border-radius: 5px;
}

.total-box{
  display: flex;
  padding: 10rpx;
  flex-direction: column;
  background-color: darkgray;
  border-radius: 20px;
  justify-content: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.text-red{
  color: brown;
}
.text-green{
  color: darkgreen;
}
/* table */
.table {
  border: 0px solid darkgray;
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 10px;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}